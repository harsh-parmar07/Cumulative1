@model IEnumerable<Cumulative_1.Models.Student>

<!-- Displaying all the students on the web page from where you can select any student  -->

<div class="student-list">
    <h2>Our students</h2>
    @foreach (Cumulative_1.Models.Student Student in Model)
    {
        <div class="student-card">
            <a href="/StudentPage/ShowStudent/@Student.StudentId" class="student-link">
                <h3 class="student-name">@Student.StudentFName @Student.StudentLName</h3>
            </a>
        </div>
    }
</div>


<style>
    .student-list {
        display: flex;
        flex-wrap: wrap;
        flex-direction: column;
        gap: 20px;
        padding: 20px;
        background-color: #f9f9f9;
    }

    .student-card {
        background-color: #ffffff;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 15px;
        width: 250px;
        text-align: center;
        transition: transform 0.2s ease-in-out;
    }

        .student-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
        }

    .student-link {
        text-decoration: none;
        color: #333;
    }

        .student-link:hover {
            color: #007bff;
        }

    .student-name {
        font-size: 1.2rem;
        font-weight: bold;
        margin: 0;
    }
</style>


