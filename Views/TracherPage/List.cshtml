@model IEnumerable<Cumulative_1.Models.Teacher>

<!-- Displaying all the teachers on the web page from where you can select any teacher  -->

<div class="teacher-list">
    <h2>Our Teachers</h2>
    @foreach (Cumulative_1.Models.Teacher Teacher in Model)
    {
        <div class="teacher-card">
            <a href="/TeacherPage/Show/@Teacher.TeacherId" class="teacher-link">
                <h3 class="teacher-name">@Teacher.TeacherFName @Teacher.TeacherLName</h3>
            </a>
        </div>
    }
</div>


<style>
    .teacher-list {
        display: flex;
        flex-wrap: wrap;
        flex-direction: column;
        gap: 20px;
        padding: 20px;
        background-color: #f9f9f9;
    }

    .teacher-card {
        background-color: #ffffff;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 15px;
        width: 250px;
        text-align: center;
        transition: transform 0.2s ease-in-out;
    }

        .teacher-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
        }

    .teacher-link {
        text-decoration: none;
        color: #333;
    }

        .teacher-link:hover {
            color: #007bff;
        }

    .teacher-name {
        font-size: 1.2rem;
        font-weight: bold;
        margin: 0;
    }
</style>


