<h2 class="text-center mb-4">Add Course</h2>

<!-- Back to courses -->
<nav class="mb-4">
    <a class="nav-link" href="/CoursePage/List">Back To Courses</a>
</nav>

<!-- Add Course Form-->
<form method="POST" action="/CoursePage/Create" class="container shadow-lg p-5 m-4 bg-light rounded">
    <!-- Course code-->
    <div class="mb-3">
        <label for="CourseCode" class="form-label">Course Code</label>
        <input type="text" name="CourseCode" id="CourseCode" class="form-control" />
    </div>

    <!-- Teacher id-->
    <div class="mb-3">
        <label for="TeacherId" class="form-label">Teacher Id</label>
        <input type="number" name="TeacherId" id="TeacherId" class="form-control" />
    </div>

    <!-- Course start date-->
    <div class="mb-3">
        <label for="StartDate" class="form-label">Start Date</label>
        <input type="date" name="StartDate" id="StartDate" class="form-control" />
    </div>

    <!-- Course finish date-->
    <div class="mb-3">
        <label for="FinishDate" class="form-label">Finish Date</label>
        <input type="date" name="FinishDate" id="FinishDate" class="form-control" />
    </div>

    <!-- Course name-->
    <div class="mb-3">
        <label for="CourseName" class="form-label">Course Name</label>
        <input type="text" name="CourseName" id="CourseName" class="form-control" />
    </div>

    <!-- Submit button -->
    <div class="text-center">
        <input type="submit" value="Create Course" class="btn btn-primary btn-lg" />
    </div>
</form>
